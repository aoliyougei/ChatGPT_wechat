.dot1, .dot2, .dot3 {
  background: #fff;
  width: 20rpx;
  height: 20rpx;
  border-color: black;
  border-radius: 50%;
}
.dot1 {
  -webkit-animation: jump 1.3s -0.32s linear infinite;
          animation: jump 1.3s -0.32s linear infinite;
}
.dot2 {
  -webkit-animation: jump 1.3s -0.16s linear infinite;
          animation: jump 1.3s -0.16s linear infinite;
}
.dot3 {
  -webkit-animation: jump 1.3s linear infinite;
          animation: jump 1.3s linear infinite;
}
@-webkit-keyframes jump {
0%, 80%, 100% {
    -webkit-transform: scale(0);
            transform: scale(0);
    background-color: #F9F9F9;
}
40% {
    -webkit-transform: scale(1);
            transform: scale(1);
    background-color: #a2a2a2;
}
}
@keyframes jump {
0%, 80%, 100% {
    -webkit-transform: scale(0);
            transform: scale(0);
    background-color: #F9F9F9;
}
40% {
    -webkit-transform: scale(1);
            transform: scale(1);
    background-color: #a2a2a2;
}
}
